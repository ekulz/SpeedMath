<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- sets the status bar colour -->
        <item name="colorPrimaryDark">@color/blueGrey700</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:background">@color/blueGrey</item>
        <item name="background">@color/blueGrey</item>
        <!-- removes the shadow between activity and action bar -->
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/blueGrey</item>

    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">#FF0000</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@color/blueGrey</item>
    </style>

    <!--
    <style name="MyOverFlowButton">
        <item name="android:background">@color/blueGrey</item>
    </style>
    -->


    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

</resources>


